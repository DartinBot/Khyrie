# Khyrie3.0 Development Environment Variables
# Copy this to .env and fill in your actual values

# OpenAI GPT-4 API Configuration
OPENAI_API_KEY=sk-your-openai-development-key-here

# Database Configuration  
DATABASE_URL=sqlite:///./khyrie_fitness.db

# Security
SECRET_KEY=your-secret-key-for-development
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Stripe Configuration (Development/Test Keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (Create these in your Stripe Dashboard)
STRIPE_PREMIUM_PRICE_ID=price_test_premium_monthly
STRIPE_PRO_PRICE_ID=price_test_pro_monthly  
STRIPE_ELITE_PRICE_ID=price_test_elite_monthly

# Application Settings
DEBUG=True
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# API Configuration
API_VERSION=v1
MAX_UPLOAD_SIZE=10485760

# Performance
CACHE_TTL=3600
MAX_CONNECTIONS=100